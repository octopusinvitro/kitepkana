<h2>Edit Book</h2>

<%= form_for(@book, url: update_book_path) do |form| %>
  <p class="form-pair">
    <%= form.text_field(:title, class: "form-text") %>
    <%= form.label(:title, class: "form-label") %>
  </p>

  <p class="form-pair">
    <%= form.text_field(:filename, class: "form-text") %>
    <%= form.label(:filename, class: "form-label") %>
  </p>

  <%= form.submit "Update book", class: "button-main" %>
<% end %>
